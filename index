    .container{ width: min(1000px, 92vw); margin-inline: auto; }

    /* ====== Scroll snap ====== */
    html{ scroll-behavior: smooth; }
    body{ scroll-snap-type: y mandatory; }

    /* ====== Fundo estrelado (canvas) ====== */
    #stars{ position: fixed; inset: 0; z-index: -2; background: #000; }
    .vignette{ position: fixed; inset: 0; z-index: -1; pointer-events: none; background: radial-gradient(1200px 1200px at 50% 60%, transparent 60%, rgba(0,0,0,.65) 100%); }

    /* ====== Brilhos sutis ====== */
    .glow{ text-shadow: 0 0 .6rem rgba(255,59,59,.6), 0 0 1.2rem rgba(255,107,107,.35); }

    /* ====== Hero ====== */
    .date{ font-size: clamp(1rem, 2.5vw, 1.25rem); letter-spacing: .12em; color: var(--muted); text-transform: uppercase; }
    .phrase{ font-size: clamp(1.6rem, 5vw, 3rem); line-height: 1.15; font-weight: 700; }
    .fade{ opacity: 0; transform: translateY(8px); transition: opacity .7s ease, transform .7s ease; }
    .fade.show{ opacity: 1; transform: translateY(0); }

    .scroll-tip{ position: absolute; bottom: 1.25rem; left: 50%; transform: translateX(-50%); font-size: .95rem; color: var(--muted); display: grid; gap: .25rem; place-items: center; animation: float 2.2s ease-in-out infinite; }
    .chevron{ width: 18px; height: 18px; border-right: 2px solid var(--muted); border-bottom: 2px solid var(--muted); transform: rotate(45deg); }
    @keyframes float{ 0%{ transform: translate(-50%,0);} 50%{ transform: translate(-50%,-6px);} 100%{ transform: translate(-50%,0);} }

    /* ====== Seção 1: Nossa história ====== */
    .card{ width: min(1100px, 94vw); margin-inline: auto; background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,.03)); border: 1px solid rgba(255,255,255,.12); border-radius: 28px; padding: clamp(1.25rem, 3vw, 2rem); box-shadow: 0 10px 30px rgba(255,59,59,.12); backdrop-filter: blur(8px); }
    .sub{ color: var(--muted); font-weight: 300; }

    /* ====== Órbita (SVG) ====== */
    .space{ display: grid; place-items: center; padding: 1rem; }
    .orbit-wrap{ width: min(560px, 88vw); aspect-ratio: 1/1; position: relative; }
    .sun{ position: absolute; inset: 50% auto auto 50%; width: 64px; height: 64px; margin-left: -32px; margin-top: -32px; background: radial-gradient(circle at 30% 30%, #fff7c0, #ffcc33 60%, #e58b15 100%); border-radius: 50%; box-shadow: 0 0 24px 8px rgba(255,204,51,.45), 0 0 80px 24px rgba(255,107,107,.18); }
    .orbit{ position: absolute; inset: 0; border: 1px dashed rgba(255,255,255,.18); border-radius: 50%; }
